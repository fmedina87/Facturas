@model Facturas.Entidades.Modelos.Factura
<div class="animated fadeInRight shadow-lg">
    <table class="table table-striped table-bordered table-hove">
        <tr>
            <td class="col-md-4">
                <h4>Información del cliente</h4>
                <div class="form-group ">
                    <label>Nombre:</label>
                    <small class="help-block">@Html.DisplayFor(model => model.Cliente.NombreCompleto)</small>
                </div>
                <div class="form-group">
                    <label>Tipo de Identificación: </label>
                    <small class="help-block">@Html.DisplayFor(model => model.Cliente.abreviacionTI)</small>
                </div>
                <div class="form-group">
                    <label>Numero Identificación: </label>
                    <small class="help-block">@Html.DisplayFor(model => model.Cliente.numeroIdentificacion)</small>
                </div>
            </td>
            <td class="col-md-8">
                <h4>Información de la factura</h4>
                <div class="form-group ">
                    <label>Factura N.:</label>
                    <small class="help-block">@Html.DisplayFor(model => model.numeroFactura)</small>
                </div>
                <div class="form-group">
                    <label>Forma de pago: : </label>
                    <small class="help-block">@Html.DisplayFor(model => model.TipoPago)</small>
                </div>
                <div class="form-group">
                    <label>Fecha factura:</label>
                    <small class="help-block">@Html.DisplayFor(model => model.fecha)</small>
                </div>

            </td>
        </tr>
    </table>
</div>
<br />
<div>
    <h4>Información del Producto</h4>
    <br />
    <table class="table table-striped table-bordered table-hove" id="tblTabla">
        <thead>
            <tr>
                <th>Cantidad</th>
                <th>Descripción</th>
                <th>Valor Unitario</th>
                <th>Valor Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Productos)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.cantidadProductos)</td>
                    <td>@Html.DisplayFor(modelItem => item.Producto)</td>
                    <td>@Html.DisplayFor(modelItem => item.valorUnitario)</td>
                    <td>@Html.DisplayFor(modelItem => item.valorTotal)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<div class="animated fadeInRight">
    <table class="table table-striped table-bordered table-hove">
        <tr>
            <td>
                <h5>Descuentos</h5>
                <div class="form-group ">
                    <label>Descuento:</label>
                    <small class="help-block">@Html.DisplayFor(model => model.descuento)</small>
                    <br />
                    <label>Total Descuento:</label>
                    <small class="help-block">@Html.DisplayFor(model => model.totalDescuento)</small>
                </div>
            </td>
            <td>
                <h5>Impuestos</h5>
                <div class="form-group ">
                    <label>I.V.A:</label>
                    <small class="help-block">@Html.DisplayFor(model => model.IVA)</small>
               <br />
                    <label>Total Impuesto:</label>
                    <small class="help-block">@Html.DisplayFor(model => model.totalImpuesto)</small>
                </div>
            </td>
            <td>
                <h5>Total facturado</h5>
                <div class="form-group ">
                    <label>Subtotal:</label>
                    <small class="help-block">@Html.DisplayFor(model => model.subTotal)</small>
                    <br />
                    <label>Total:</label>
                    <small class="help-block">@Html.DisplayFor(model => model.Total)</small>
                </div>
            </td>
        </tr>
    </table>
</div>